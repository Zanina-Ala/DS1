pipeline {
    agent any

    environment {
        APP_NAME = 'react-ci-dev'
        APP_PORT = '8082'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup') {
            steps {
                bat 'echo Using Node installed on system...'
                bat 'node -v'
                bat 'npm -v'
                bat 'npm install'
            }
        }

        stage('Parallel Build Matrix') {
            parallel {

                stage('Build-node18 (simulated)') {
                    steps {
                        bat 'echo Building with Node 18 (simulated)'
                        bat 'npm run build'
                    }
                }

                stage('Build-node20 (simulated)') {
                    steps {
                        bat 'echo Building with Node 20 (simulated)'
                        bat 'npm run build'
                    }
                }

            }
        }

        stage('Run (Docker)') {
            steps {
                script {
                    // Pre-cleanup: remove old containers safely
                    bat '''
                    echo Cleaning old containers for react-ci-dev...
                    set containers=
                    for /f "tokens=*" %%i in ('docker ps -aq --filter "name=react-ci-dev"') do (
                        set containers=%%i
                    )
                    if defined containers (
                        docker rm -f %containers%
                    ) else (
                        echo No containers to remove
                    )
                    '''

                    // Build image
                    bat "docker build -t %APP_NAME%:%BUILD_ID% ."
bat 'npm run test:smoke || echo "Skipping smoke tests..."'

                    // Run new container
                    bat "docker run -d -p %APP_PORT%:80 --name %APP_NAME%-%BUILD_ID% %APP_NAME%:%BUILD_ID%"

                    // Wait a bit for container to start
                    bat "ping 127.0.0.1 -n 5 >NUL"

                    // Smoke tests
                    bat "npm run test:smoke"
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'dist/**', fingerprint: true
            }
        }

        stage('Cleanup') {
            steps {
                bat "docker image prune -af || echo cleanup failed"
            }
        }
    }

    post {
        always {
            script {
                // Post-build cleanup
                bat '''
                echo Post-build cleanup: removing containers react-ci-dev* ...
                set containers=
                for /f "tokens=*" %%i in ('docker ps -aq --filter "name=react-ci-dev"') do (
                    set containers=%%i
                )
                if defined containers (
                    docker rm -f %containers%
                ) else (
                    echo No containers to remove
                )
                '''
            }
        }

        success { echo 'Dev pipeline success' }
        failure { echo 'Dev pipeline failed' }
    }
}
