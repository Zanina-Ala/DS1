pipeline {
    agent any

    options {
        timestamps()
        disableConcurrentBuilds()
        skipStagesAfterUnstable()
    }

    environment {
        APP_NAME = "ds1-react-app-dev"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        // Install local deps (optionnel mais propre)
        stage('Install dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Parallel Build and Smoke Tests') {
            parallel {

                stage('Node 18 Build') {
                    steps {
                        // build + smoke test inside node:18 container
                        bat 'docker run --rm -v "%CD%":/app -w /app node:18 npm install'
                        bat 'docker run --rm -v "%CD%":/app -w /app node:18 npm run build'
                        bat 'docker run --rm -v "%CD%":/app -w /app node:18 npm run test:smoke'
                    }
                }

                stage('Node 20 Build') {
                    steps {
                        // build + smoke test inside node:20 container
                        bat 'docker run --rm -v "%CD%":/app -w /app node:20 npm install'
                        bat 'docker run --rm -v "%CD%":/app -w /app node:20 npm run build'
                        bat 'docker run --rm -v "%CD%":/app -w /app node:20 npm run test:smoke'
                    }
                }

            }
        }

        stage('Docker Build (dev)') {
            steps {
                bat "docker build -t ${APP_NAME}:latest ."
            }
        }

        stage('Archive dist') {
            steps {
                archiveArtifacts artifacts: 'dist/**', fingerprint: true
            }
        }
    }

    post {
        success {
            echo "DEV pipeline succeeded"
        }
        failure {
            echo "DEV pipeline failed"
        }
    }
}
