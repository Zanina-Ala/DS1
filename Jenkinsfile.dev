pipeline {
    agent any

    options {
        timestamps()
        disableConcurrentBuilds()
        skipStagesAfterUnstable()
    }

    environment {
        APP_NAME = "ds1-react-app-dev"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Parallel Build & Smoke Tests') {
            parallel {
                stage('Node 18 Build') {
                    agent {
                        docker { image 'node:18' }
                    }
                    stages {
                        stage('Install (node18)') {
                            steps { sh 'npm install' }
                        }
                        stage('Build (node18)') {
                            steps { sh 'npm run build' }
                        }
                        stage('Smoke (node18)') {
                            steps { sh 'npm run test:smoke' }
                        }
                    }
                }

                stage('Node 20 Build') {
                    agent {
                        docker { image 'node:20' }
                    }
                    stages {
                        stage('Install (node20)') {
                            steps { sh 'npm install' }
                        }
                        stage('Build (node20)') {
                            steps { sh 'npm run build' }
                        }
                        stage('Smoke (node20)') {
                            steps { sh 'npm run test:smoke' }
                        }
                    }
                }
            }
        }

        stage('Docker Build (dev)') {
            steps {
                sh "docker build -t ${APP_NAME}:latest ."
            }
        }

        stage('Archive dist/') {
            steps {
                archiveArtifacts artifacts: 'dist/**', fingerprint: true
            }
        }
    }

    post {
        success {
            echo "DEV pipeline OK"
        }
        failure {
            echo "DEV pipeline FAILED"
        }
    }
}
