pipeline {
    agent any

    environment {
        APP_NAME = 'react-ci-dev'
        APP_PORT = '8081'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup') {
            steps {
                bat '''
                echo Using Node 20.19.0 via nvm...
                nvm use 20.19.0
                node -v
                npm -v
                npm install
                '''
            }
        }

        stage('Parallel Build Matrix') {
            parallel {

                stage('Build-node18 (simulated)') {
                    steps {
                        bat '''
                        echo Building with Node 18 (simulated)
                        npm run build
                        '''
                    }
                }

                stage('Build-node20 (simulated)') {
                    steps {
                        bat '''
                        echo Building with Node 20 (simulated)
                        npm run build
                        '''
                    }
                }

            }
        }

        stage('Run (Docker)') {
            steps {
                script {

                    // Pre-cleanup: remove old containers
                    bat '''
                    echo Cleaning old containers for react-ci-dev...
                    for /f "tokens=1" %%i in ('docker ps -aq --filter "name=react-ci-dev" 2>nul') do (
                        docker rm -f %%i || echo No container %%i to remove
                    )
                    '''

                    // Build image
                    bat "docker build -t %APP_NAME%:%BUILD_ID% ."

                    // Run container
                    bat "docker run -d -p %APP_PORT%:80 --name %APP_NAME%-%BUILD_ID% %APP_NAME%:%BUILD_ID%"

                    // Wait a bit
                    bat "ping 127.0.0.1 -n 5 >NUL"

                    // Smoke tests
                    bat "npm run test:smoke"
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'dist/**', fingerprint: true
            }
        }

        stage('Cleanup') {
            steps {
                bat "docker image prune -af || echo cleanup failed"
            }
        }
    }

    post {
        always {
            script {
                bat '''
                echo Post-build cleanup: removing containers react-ci-dev* ...
                for /f "tokens=1" %%i in ('docker ps -aq --filter "name=react-ci-dev" 2>nul') do (
                    docker rm -f %%i || echo No container %%i to remove
                )
                '''
            }
        }

        success { echo 'Dev pipeline success' }
        failure { echo 'Dev pipeline failed' }
    }
}
